{
  "name": "react-websockets",
  "version": "1.0.0",
  "description": "React WebSocket Workspace",
  "main": "index.js",
  "scripts": {
    "install": "npm install && npm install --workspaces",
    "start": "concurrently \"npm run dev --workspace=apps/client\" \"npm run dev --workspace=apps/server\""
  },
  "workspaces": [
    "apps/server",
    "apps/client"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}